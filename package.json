{
  "name": "p5-typescript-boilerplate",
  "description": "A typescript library for creating stand-alone p5.js sketches",
  "version": "0.0.0-development",
  "main": "build/index.js",
  "author": "Graham Clapham",
  "license": "MIT",
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@types/jest": "^26.0.15",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "commitizen": "^4.2.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.16.0",
    "jest": "^26.6.3",
    "parcel": "^1.10.3",
    "semantic-release": "^17.4.4",
    "ts-jest": "^26.4.3",
    "ts-node": "^9.0.0",
    "typedoc": "^0.21.4",
    "typescript": "^4.1.3"
  },
  "alias": {
    "lib": "./src/lib"
  },
  "jest": {
    "moduleNameMapper": {
      "^lib/(.)$": "/src/api/$1"
    }
  },
  "scripts": {
    "dev": "./node_modules/.bin/parcel src/index.html",
    "prod": "./node_modules/.bin/parcel build src/index.html",
    "umd": "./node_modules/.bin/parcel build --out-dir dist src/index.ts --global p5-ts-boilerplate",
    "test": "node_modules/.bin/jest",
    "test:watch": "node_modules/.bin/jest --watchAll",
    "commit": "cz",
    "docs": "node_modules/.bin/typedoc --out docs src/lib/**/* --exclude '**/*+(.spec|.e2e).ts'",
    "postinstall": "npm run umd",
    "lint": "node_modules/.bin/eslint . --ext .ts",
    "semantic-release": "semantic-release"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@types/dat.gui": "^0.7.7",
    "@types/p5": "^0.9.1",
    "dat.gui": "^0.7.7",
    "p5": "^1.2.0",
    "sketch": "^0.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mrClapham/p5-typscript-boilerplate.git"
  }
}
