{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2017", "es7", "es6", "dom"],
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "interfaces": ["interfaces/*"],
      "lib": ["lib/*"],
    }
  },
  
  "exclude": [
    "node_modules",
    "dist"
  ]
}