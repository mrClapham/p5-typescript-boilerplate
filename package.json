{
  "name": "p5-typescript-boilerplate",
  "description": "A typescript library for creating stand-alone p5.js sketches",
  "version": "2.0.0-alpha.7",
  "main": "library/index.js",
  "types": "library/index.d.ts",
  "author": "Graham Clapham",
  "license": "MIT",
  "engines": {
    "node": "19.x"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-typescript": "^7.12.1",
    "@types/jest": "^26.0.15",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "commitizen": "^4.2.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.16.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.4.3",
    "parcel": "^2.0.0-beta.2",
    "semantic-release": "^20.1.0",
    "ts-jest": "^29.0.5",
    "ts-loader": "^9.2.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "typedoc": "^0.21.4",
    "typescript": "^4.3.5",
    "webpack": "^5.47.0",
    "webpack-cli": "^4.7.2"
  },
  "alias": {
    "lib": "./src/lib",
    "sketch": "./src/sketch",
    "interfaces": "./src/lib/interfaces"
  },
  "jest": {
    "moduleNameMapper": {
      "^lib/(.)$": "/src/api/$1"
    }
  },
  "scripts": {
    "build:tsc": "./node_modules/.bin/tsc",
    "dev": "./node_modules/.bin/parcel src/index.html",
    "prod": "./node_modules/.bin/parcel build src/index.html",
    "build": "webpack && npm rum build:tsc",
    "test": "node_modules/.bin/jest --config=jest.config.ts",
    "test:watch": "node_modules/.bin/jest -config=jest.config.ts --watchAll",
    "commit": "cz",
    "docs": "node_modules/.bin/typedoc --out docs src/lib/**/* --exclude '**/*+(.spec|.e2e).ts'",
    "prepare": "npm run build",
    "lint": "node_modules/.bin/eslint . --ext .ts",
    "semantic-release": "semantic-release"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@types/p5": "^0.9.1",
    "p5": "^1.2.0",
    "perlin-noise-3d": "^0.5.4",
    "sketch": "^0.2.0",
    "ts-node-dev": "^2.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:mrClapham/p5-typescript-boilerplate.git"
  }
}